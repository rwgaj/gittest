
pipeline {
  agent {
    docker {
      image 'maven:3-jdk-8'
      args '-v /root/.m2:/root/.m2'
    }

  }
  stages {
    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage('Test') {
      environment {
        CI = 'true'
      }
      steps {
        sh 'mvn test'
      }
      post {
	always {
		junit 'target/surefire-reports/*.xml'
        }
      }
    }
    stage('Install') {
      steps {
        sh 'mvn clean install'
      }
    }
  }
}