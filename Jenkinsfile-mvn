pipeline {
  agent {
    docker {
      image 'maven:3-jdk-8'
      args '-v /root/.m2:/root/.m2'
    }
  }
  stages {
    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage('Test') {
      steps {
        sh 'mvn test'
      }
    }
    stage('Install') {
      steps {
        sh 'mvn clean deploy'
      }
    }
  }
}